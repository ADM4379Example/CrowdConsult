@page
@model DashboardModel
@{
    ViewData["Title"] = "My Dashboard";
}

<html>
    <head>
        <title>My Dashboard</title>
        <script src="js/site.js"></script>
    </head>

    <body>
        <div class="row">
            <div class="leftcolumn">
                <h7 class="h7">My Activity</h7>
                <!-- the check below should eventually be changed to user that posted instead of case id -->
                @foreach (var bcase in Model.Cases) { 
                    @if (@bcase.id == "0" || @bcase.id == "2") {
                        <div class="card">
                            <p style="text-align:left;">
                                <b>@bcase.title</b>
                                <span style="float:right;">
                                    <b>Bounty: CAD$ @bcase.bounty</b>
                                </span>
                            </p>
                            <p id="datetime_@bcase.id"></p>
                            <script>
                                var datetime = convertEpoch(@bcase.datetime);
                                document.getElementById("datetime_@bcase.id").innerHTML = "<b>Date Posted: </b>" + datetime;
                            </script>
                            <p><b>Num Responses: </b>@bcase.num_responses</p>
                            <div class="btn-group">
                                <a href="/Case?id=@bcase.id">
                                    <button class="btn2">View</button>
                                </a>
                                <button class="btn2">Edit</button>
                                <button class="btnDelete">Delete</button>
                            </div>
                        </div>
                    }
                }
            </div>
            <div class="rightcolumn">
                <div class="card">
                    <h7 class="h7">Profile</h7>    
                    <img src="https://i.imgur.com/nHU6zrb.jpg" alt="profilePic" width="150">
                    <br>
                    <dl>
                        <!-- This information will be moved to the database in a json object -->
                        <dt>John Doe</dt>        
                        <dt>Ottawa, ON</dt>
                        <dt>(613)123-4567</dt>
                        <dt><a href="mailto:john.doe@gmail.com">john.doe@gmail.com</a></dt>
                    </dl>
                    <button class="btn2">Edit</button>
                </div>
            </div>
        </div>
    </body>
</html>